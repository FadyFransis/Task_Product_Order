@model Admin.MVC.ViewModels.UserViewModel
@using Admin.MVC.Services;
@inject CommonLocalizationService localizer;
@{
    ViewData["Title"] = localizer.Get("Edit User");
    ViewData["BackPageName"] = localizer.Get("Users List");
    ViewData["BackPageUrl"] = "User";
}


<div class="ibox">
    <div class="ibox-title">
        <h5>Edit</h5>
        <div class="ibox-tools">
            <a class="btn btn-defult " asp-action="Index">Back to List</a>
        </div>
    </div>
    <div class="ibox-content">
        <div class="row pr-sm-5 pl-sm-5  ">
            <div class="col-md-12">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="FirstName" class="control-label"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="LastName" class="control-label"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">

                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" readonly="readonly" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="control-label"></label>
                                <input asp-for="PhoneNumber" readonly="readonly" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="Roles" class="control-label"></label>
                                <select asp-for="Roles" class="form-control" asp-items="ViewBag.Roles"></select>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="checkbox m-r-xs">
                                <label class="form-check-label">
                                    <input class="" asp-for="EmailConfirmed" /> @Html.DisplayNameFor(model => model.EmailConfirmed)
                                </label>
                            </div>
                        </div>


                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Password" />
                        <input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="Password" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary  " />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
