@model Admin.MVC.ViewModels.ResetPasswordViewModel
@using Admin.MVC.Services;
@inject CommonLocalizationService localizer;
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
}

<div class="middle-box text-center loginscreen animated fadeInDown">

    <div class="mb-5">
        <h2 class="font-bold">@localizer.Get("Reset password")</h2>
    </div>
  

    <form class="m-t" method="post">
        <input type="hidden" asp-for="Email" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <input asp-for="Code" class="form-control" placeholder="@localizer.Get("Code")">
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="NewPassword" class="form-control" placeholder="@localizer.Get("New Password")">
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary block full-width m-b">@localizer.Get("Save")</button>

    </form>


</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


