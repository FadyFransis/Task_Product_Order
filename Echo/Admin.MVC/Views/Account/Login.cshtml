@model Admin.MVC.ViewModels.LoginViewModel
@using Admin.MVC.Services;
@inject CommonLocalizationService localizer;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
}

<div class="middle-box text-center loginscreen animated fadeInDown">
    <div>
        <div class="mb-5">
            <h1 class="logo-name">App</h1>
        </div>
        <h3>@localizer.Get("Login")</h3>
       
        <form class="m-t" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="@localizer.Get("Email")">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" class="form-control" placeholder="@localizer.Get("Password")">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary block full-width m-b">@localizer.Get("Login")</button>

            <a href="./ForgetPassword"><small>@localizer.Get("Forget password?")</small></a>
        </form>
       
    </div>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


